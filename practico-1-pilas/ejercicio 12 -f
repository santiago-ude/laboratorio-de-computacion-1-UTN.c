  while(valor == 1) {
  leer(&modelo);


printf("\n1 continuar\n0 salir\n");
           scanf("%i",&valor);


  }
    valor = 1;
    printf("Pila dada\n");

  while(valor == 1) {
    leer(&dada);

    printf("\n1 continuar\n 0 salir\n");
    scanf("%i", &valor);
  }




 while (!pilavacia(&modelo)) {

    topeD = tope(&dada);
