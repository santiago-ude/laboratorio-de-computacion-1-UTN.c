         printf ("\n %i es mayor que %i", topeA, topeB);

    }   else if (topeB > topeA){
         printf ("\n %i es mayor que %i", topeB, topeA);}


        apilar(&pilaA, desapilar(&auxA));
}

while (!pilavacia(&auxB)) {

        topeA = 0;
        topeB =tope(&auxB);

        printf("\n\n comparacion \n\n");
     if (topeA == topeB) {
        printf ("\nlos dos valores son iguales");
 }    else if (topeA > topeB){
        printf ("\n %i es mayor que %i", topeA, topeB);

   }  else if (topeB > topeA){
        printf ("\n %i es mayor que %i", topeB, topeA);}

