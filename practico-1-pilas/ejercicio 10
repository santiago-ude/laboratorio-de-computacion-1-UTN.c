#include <stdio.h>
#include <stdlib.h>
#include "../../pila.h"

int main()
{
  Pila pilaA, pilaB,auxA,auxB;
  int topeA, topeB, valor;
  float contador;

  valor = 1;

  inicpila(&pilaA);
  inicpila(&pilaB);
  inicpila(&auxA);
  inicpila(&auxB);


  printf("Pila A\n");

  while(valor == 1) {
  leer(&pilaA);

  printf("\n 1 continuar\n0 salir\n");
  scanf("%i",&valor);

  }

printf("Pila B\n");

  while(valor == 0) {
    leer(&pilaB);

    printf("\n 0 continuar\n 1 salir\n");
    scanf("%i", &valor);
  }

  mostrar(&pilaA);
  mostrar(&pilaB);


/// CANTIDAD
  while( (!pilavacia(&pilaA)) && (!pilavacia(&pilaB)) ) {

    apilar(&auxA, desapilar(&pilaA));
    apilar(&auxB, desapilar(&pilaB));
  }




if (pilavacia(&pilaB) && pilavacia(&pilaA)) {

    printf("Las dos pilas tienen la misma cantidad de elementos");
}

else if (pilavacia (&pilaA)) {
    printf("La pila  B tiene mas elementos");
    while(!pilavacia(&pilaB)) {
          apilar(&auxB, desapilar(&pilaB));}
}

else if (pilavacia(&pilaB)) {
   printf("La pila A tiene mas elementos");
   while(!pilavacia(&pilaA)) {
    apilar(&auxA, desapilar(&pilaA));
   }
}


///VALORES Y POSICIONES



    while((!pilavacia(&auxA)) && (!pilavacia(&auxB)) ){
            contador = contador + 1;
    apilar(&pilaA, desapilar(&auxA));
    apilar(&pilaB, desapilar(&auxB));

    topeA = tope(&pilaA);
    topeB = tope(&pilaB);
    printf("\nposicion numero %0.f", contador);
     if (topeA == topeB) {

        printf ("\nlos dos valores son iguales");


    }
    else if (topeA > topeB){

        printf ("\n%i es mayor que %i", topeA, topeB);

    }
    else if (topeB > topeA){

        printf ("\n%i es mayor que %i", topeB, topeA);}
}

    return 0;
}
