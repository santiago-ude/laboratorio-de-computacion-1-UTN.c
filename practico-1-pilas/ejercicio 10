  inicpila(&pilaA);
  inicpila(&pilaB);
  inicpila(&auxA);
  inicpila(&auxB);


  printf("Pila A\n");

  while(valor == 1) {
  leer(&pilaA);


printf("\n1 continuar\n0 salir\n");
           scanf("%i",&valor);


  }
    valor = 1;
    printf("Pila B\n");

