#include <stdio.h>
#include <stdlib.h>

void buscarCaracter (char array[], int dimension);

int main() {

int dimension = 10;

char array[10] = "hola amigo";


buscarCaracter(array, dimension);


return 0;
}

void buscarCaracter (char array[], int dimension) {

int i = 0;
char elemento, valor;

printf("Que valor queres buscar en el array? ");
scanf("%c", &valor);


while (i < dimension){

    elemento = array[i];

    if (valor == elemento) {
        printf("%c se encuentra dentro del arreglo", valor);
        i = dimension;
    }
    i++;
}
}
